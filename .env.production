# Production environment variables for Render deployment
# Copy these to your Render environment variables

# Database (automatically set by Render)
# DATABASE_URL is provided by Render

# NextAuth.js Configuration
NEXTAUTH_SECRET=your-super-secret-nextauth-secret-key-here
NEXTAUTH_URL=https://rylie-seo-hub.onrender.com

# IMPORTANT: Auth disabled for initial deployment
AUTH_DISABLED=true
DEFAULT_USER_ID=test-user-id
DEFAULT_USER_EMAIL=user@example.com
DEFAULT_AGENCY_ID=default-agency

# App Configuration
APP_NAME=Rylie SEO Hub
APP_URL=https://rylie-seo-hub.onrender.com
NODE_ENV=production

# OpenRouter AI (Required for chat)
OPENROUTER_API_KEY=your-openrouter-api-key
OPENROUTER_BASE_URL=https://openrouter.ai/api/v1

# Email Configuration (Optional - for later)
EMAIL_SERVER_HOST=smtp.gmail.com
EMAIL_SERVER_PORT=587
EMAIL_SERVER_USER=your-email@gmail.com
EMAIL_SERVER_PASSWORD=your-app-specific-password
EMAIL_FROM=noreply@rylie-seo-hub.com

# Optional Services (can be added later)
SENTRY_DSN=
NEXT_PUBLIC_SENTRY_DSN=
NEXT_PUBLIC_POSTHOG_KEY=
NEXT_PUBLIC_POSTHOG_HOST=https://app.posthog.com

# Disable Sentry warnings
SENTRY_SUPPRESS_GLOBAL_ERROR_HANDLER_FILE_WARNING=1
